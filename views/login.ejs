  <script>
    function selected(x) {
      if (x == 1) {
        $("#login_selected").removeClass("active");
        $("#signup_selected").addClass("active");
        $("#login").hide();
        $("#signup").show();
        $("#notification0").hide();
        $("#notification2").hide();
        $("#notification1").hide();
        $("#notification3").hide();
        $("#notification5").hide();
        $("#notification4").show();
      } else {
        $("#login_selected").addClass("active");
        $("#signup_selected").removeClass("active");
        $("#signup").hide();
        $("#login").show();
        $("#notification5").hide();
        $("#notification4").hide();
        $("#notification3").hide();
        $("#notification2").hide();
        $("#notification1").hide();
        $("#notification0").show();
      }
    }

    function signup() {
      let username = $("#username-signup").val();
      let password = $("#password-signup").val();
      let csrf = $("#csrf-signup").val();
      let formData = new FormData();
      formData.append("username", username);
      formData.append("password", password);
      formData.append("_csrf", csrf);
      $.ajax({
        type: "POST",
        url: "/signup",
        data: formData,
        processData: false,
        contentType: false,
        success: function (data) {
          $(".csrf").val(data[0]);
          if (data[1] == true) {
            $("#signup").hide();
            $("#notification0").hide();
            $("#notification2").hide();
            $("#notification1").show();
            $("#notification4").hide();
            $("#notification3").hide();
            $("#notification5").hide();
            $("#login_selected").addClass("active");
            $("#signup_selected").removeClass("active");
            $("#login").show();
          } else {
            $("#notification0").hide();
            $("#notification2").hide();
            $("#notification1").hide();
            $("#notification4").hide();
            $("#notification3").show();
            $("#notification5").hide();
          }
        },
        error: function (request, status, err) {
          $("#notification5").show();
          $("#notification4").hide();
          $("#notification3").hide();
          $("#notification2").hide();
          $("#notification1").hide();
          $("#notification0").hide();
        },
      });
    }
    function open_password(x) {
      if (x == 1) {
        if ($("#password-signup").attr("type") == "password") {
          $("#password-signup").attr("type", "text");
          $("#close1").show();
          $("#open1").hide();
        } else if ($("#password-signup").attr("type") == "text") {
          $("#password-signup").attr("type", "password");
          $("#close1").hide();
          $("#open1").show();
        }
      } else if (x == 2) {
        if ($("#password").attr("type") == "password") {
          $("#password").attr("type", "text");
          $("#close2").show();
          $("#open2").hide();
        } else if ($("#password").attr("type") == "text") {
          $("#password").attr("type", "password");
          $("#close2").hide();
          $("#open2").show();
        }
      }
    }
    const error = <%= error %>;
    $(window).on("load", function () {
      $("svg[name='success']").hide();
      $("svg[name='warning']").hide();
      $("#signup").hide();
      $("#notification0").hide();
      $("#notification2").hide();
      $("#notification1").hide();
      $("#notification4").hide();
      $("#notification3").hide();
      $("#notification5").hide();
      $("#close1").hide();
      $("#close2").hide();
      if (error == 2) {
        $("#notification2").show();
        $("#username").addClass("border border-danger");
        $("#password").addClass("border border-danger");
        $("#username-comment").addClass("text-danger");
        $("#password-comment").addClass("text-danger");
        $("#username").parent().find("svg[name='warning']").show();
        $("#password").parent().find("svg[name='warning']").show();
        document.getElementById("username").addEventListener("keyup",function(){
          $("#username").removeClass("border border-danger");
          $("#username").addClass("border border-success");
          $("#username-comment").removeClass("text-danger");
          $("#username-comment").addClass("text-success");
          $("#username-comment").text("もう一度ログインしてみてください。");
          $("#username").parent().find("svg[name='warning']").hide();
          $("#username").parent().find("svg[name='success']").show();
        });
        document.getElementById("password").addEventListener("keyup",function(){
          $("#password").removeClass("border border-danger");
          $("#password").addClass("border border-success");
          $("#password-comment").removeClass("text-danger");
          $("#password-comment").addClass("text-success");
          $("#password-comment").text("もう一度ログインしてみてください。");
          $("#password").parent().find("svg[name='warning']").hide();
          $("#password").parent().find("svg[name='success']").show();
        });
      } else {
        $("#notification0").show();
      }

    });
  </script>
</html>

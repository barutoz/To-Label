<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/To-Label.png" />
    <title>To-Label</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.js"
      integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
      crossorigin="anonymous"
    ></script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
    <nav
      class="navbar bg-dark border-bottom border-bottom-dark navbar-expand-lg fixed-top"
      style="font-size: 30px; font-weight: bold; width: 100%"
      data-bs-theme="dark"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="/" style="font-size: 30px">To-Label</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
          style="text-align: right"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">History</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/setting">Setting</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main style="position: absolute; top: 80px; right: 30px; left: 30px">
      <div class="container mt-5">
        <div class="row">
          <div class="card bg-<%= color %>-subtle border border-<%= color %>">
            <h3 class="text-center mt-4 text-<%= color %>-emphasis">
              レッテルを貼りましょう!
            </h3>
            <p class="text-right me-5" style="text-align: right" id="timer"></p>
            <div class="progress mb-4 mx-3">
              <div
                class="progress-bar bg-<%= color %> progress-bar-striped"
                role="progressbar"
                style="width: 25%"
                aria-valuenow="25"
                aria-valuemin="0"
                aria-valuemax="100"
                id="progress"
              ></div>
            </div>
          </div>
        </div>
        <div class="row mt-3" id="fortwo4">
          <div class="col-12 col-md-6" id="fortwo2">
            <div class="row">
              <div
                class="card mb-2 bg-<%= color %>-subtle border border-<%= color %>"
                id="fortwo3"
              >
                <div class="card-body">
                  <textarea
                    class="form-control"
                    id="message"
                    rows="3"
                    style="resize: none"
                    placeholder=""
                  ></textarea>
                  <div class="row mt-2">
                    <div class="col-6">
                      <select
                        id="address"
                        class="form-select"
                        aria-label="Default select example"
                      >
                        <option selected value="origin" id="origin">
                          宛先
                        </option>
                        <% other_users.forEach(element =>{%>
                        <option value="<%= element.authorization %>">
                          <%= element.user %>
                        </option>
                        <% }) %>
                      </select>
                    </div>
                    <div class="col-6">
                      <button
                        class="btn btn-<%= color %>"
                        style="text-align: right; font-weight: bold"
                        id="msg_submit"
                      >
                        レッテルを貼る
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <div
                class="card mt-2 bg-<%= color %>-subtle border border-<%= color %>"
                id="fortwo1"
              >
                <div class="card-body">
                  <ul class="list-group" id="your_msg_list">
                    <% your_msg_list.forEach(element=>{ %>
                    <li
                      class="list-group-item bg-<%= element.color %>-subtle border border-<%= element.color %>"
                      name="<%= element.control %>"
                    >
                      <div class="row">
                        <div class="col-6 pb-0">
                          <p class="text-<%= element.color %>-emphasis">
                            @<%= element.to_username %>
                          </p>
                          <p
                            name="msg"
                            class="text-<%= element.color %>-emphasis"
                          >
                            <%= element.msg %>
                          </p>
                          <input
                            type="text"
                            class="form-control"
                            placeholder="入力してね"
                            value="<%= element.msg %>"
                            name="<%= element.control %>"
                          />
                        </div>
                        <div class="col-6 pb-0">
                          <button
                            type="button"
                            class="btn btn-success btn-sm"
                            name="complete"
                            style="font-weight: bold"
                          >
                            完了
                          </button>
                          <div
                            class="btn-group"
                            role="group"
                            aria-label="Basic mixed styles example"
                          >
                            <button
                              type="button"
                              class="btn btn-success btn-sm"
                              name="edit"
                              style="font-weight: bold"
                            >
                              編集
                            </button>
                            <button
                              type="button"
                              class="btn btn-danger btn-sm"
                              name="delete"
                              style="font-weight: bold"
                            >
                              削除
                            </button>
                          </div>
                        </div>
                      </div>
                    </li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6 col-12 px-0" id="flex-right">
            <div
              class="card px-4 bg-<%= color %>-subtle border border-<%= color %>"
            >
              <div class="card-body px-0" id="other_msg_list">
                <% other_msg_list.forEach(element=>{%>
                <div
                  class="card bg-<%= element.color %>-subtle border border-<%= element.color %>"
                  name="<%= element.control %>"
                >
                  <div
                    class="card-header bg-<%= element.color %> border border-<%= element.color %> text-white"
                    style="font-weight: bold"
                    name="header"
                  >
                    TO: <%= element.to_username %>
                  </div>
                  <div class="card-body text-<%= element.color %>-emphasis">
                    <blockquote class="blockquote mb-0">
                      <p><%= element.msg %></p>
                      <footer class="blockquote-footer">
                        <cite title="Source Title"
                          >FROM: <%= element.from_username%></cite
                        >
                      </footer>
                    </blockquote>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <div
      class="modal fade"
      id="modal_recommend"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header bg-warning text-white">
            <h2 class="modal-title" id="exampleModalLabel">下品!!! 卑猥!!!</h2>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" id="NG_pop"></div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
              style="font-weight: bold"
            >
              送信しない
            </button>
            <button
              type="button"
              class="btn btn-warning"
              style="font-weight: bold"
              id="resend_msg"
            >
              送信する
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="modal_prohibit"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header bg-danger text-white">
            <h2 class="modal-title" id="exampleModalLabel">下品!!! 卑猥!!!</h2>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body" id="NG_pop2"></div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
              style="font-weight: bold"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <input type="text" id="address_pop" hidden />
    <input type="text" id="msg_pop" hidden />
    <input type="number" id="number_pop" hidden />
    <script>
      ///var socket = io("http://" + location.hostname, {
      ///path: "/To-Label",
      ///});
      var socket = io();
      let content;
      const self_authorization = "<%= self_authorization %>";
      let time = "<%= time %>";
      let original_time = "<%= original_time %>";
      let progress;
      let timer1;
      let timer2;
      const mycolor = "<%= color %>";
      const others = "<%= other_users.length %>";

      $(window).on("load", function () {
        if (others == "1") {
          $("#flex-right").hide();
          $("#fortwo3").insertBefore("#fortwo2");
          $("#fortwo1").insertAfter("#fortwo3");
          $("#flex-right").hide();
          $("#fortwo3").addClass("col-md-6 col-12");
          $("#fortwo1").addClass("col-md-6 col-12");
          $("#fortwo2").attr("class", "");
        }
        $("#your_msg_list")
          .find("input")
          .each(function () {
            $(this).attr("type", "hidden");
          });
        $("#your_msg_list")
          .find("button[name='complete']")
          .each(function () {
            $(this).hide();
          });
        if (Number(time) / 60 > 1) {
          console.log(time);
          var min = String(Math.floor(Number(time) / 60));
          var sec = String(time - min * 60);
          $("#timer").text("残り " + min + ":" + sec);
        }
        progress = Math.floor(
          100 - (Number(time) * 100) / Number(original_time)
        );
        $("#progress").attr("style", "width: " + String(progress) + "%");
        $("#progress").text(String(progress) + "%");
        socket.emit("room-join");
        timer1 = setInterval(function () {
          time = time - 1;
          var min = String(Math.floor(Number(time) / 60));
          var sec = String(time - min * 60);
          $("#timer").text("残り " + min + ":" + sec);
        }, 1000);
        timer2 = setInterval(function () {
          progress = Math.floor(
            100 - (Number(time) * 100) / Number(original_time)
          );
          $("#progress").attr("style", "width: " + String(progress) + "%");
          $("#progress").text(String(progress) + "%");
        }, original_time / 100);
        if ($(window).width() < 768) {
          $("#flex-right").addClass("mt-3");
        } else {
          if (others == "1") {
            $("#fortwo1").addClass("h-100");
            $("#fortwo1").removeClass("mt-2");
          }
        }
      });

      $(window).on("resize", function () {
        if ($(window).width() < 768) {
          $("#flex-right").addClass("mt-3");
          if (others == "1") {
            $("#fortwo1").removeClass("h-100");
            $("#fortwo1").addClass("mt-2");
          }
        } else {
          $("#flex-right").removeClass("mt-3");
          if (others == "1") {
            $("#fortwo1").addClass("h-100");
            $("#fortwo1").removeClass("mt-2");
          }
        }
      });

      $("#msg_submit").click(function () {
        if ($("#address").val() == "origin") {
          $("#origin").text("宛名を入れてね!!");
        } else {
          if ($("#message").val() == "") {
            $("#message").attr("placeholder", "なんか入力してね");
          } else {
            content = [$("#address").val(), $("#message").val()];
            $("#NG_pop").text(
              "あなたの入力した言葉 '" +
                $("#message").val() +
                "' は下品で猥褻です。送信しないことを推奨します。"
            );
            $("#NG_pop2").text(
              "あなたの入力した言葉 '" +
                $("#message").val() +
                "' は極度に下品で猥褻なものです。送信できません。"
            );
            $("#msg_pop").val($("#message").val());
            $("#address_pop").val($("#address").val());
            $("#number_pop").val(0);
            socket.emit("msg_submit", content);
            $("#message").val("");
          }
        }
      });

      socket.on("receive_msg", function (msg) {
        if (msg.length == 7) {
          if (msg[0] == self_authorization) {
            $("#your_msg_list").append(
              '<li class="list-group-item bg-' +
                msg[6] +
                "-subtle border border-" +
                msg[6] +
                '" name="' +
                msg[5] +
                '"><div class="row"><div class="col-6 pb-0"><p class="text-' +
                msg[6] +
                '-emphasis">@' +
                msg[4] +
                '</p><p name="msg" class="text-' +
                msg[6] +
                '-emphasis">' +
                msg[2] +
                '</p><input type="hidden" class="form-control" placeholder="入力してね" value=' +
                msg[2] +
                " name=" +
                msg[5] +
                '></div><div class="col-6 pb-0"><button type="button" class="btn btn-success btn-sm" name="complete" style="display: none; font-weight:bold;">完了</button><div class="btn-group" role="group" aria-label="Basic mixed styles example"><button type="button" class="btn btn-success btn-sm" name="edit" style="font-weight:bold;">編集</button><button type="button" class="btn btn-danger btn-sm" name="delete" style="font-weight:bold;">削除</button></div></div></div></li>'
            );
            $("#NG_pop2").text("");
            $("#NG_pop").text("");
            $("#msg_pop").val("");
            $("#address_pop").val("");
            $("#number_pop").val("");
          } else if (
            msg[0] !== self_authorization &&
            msg[1] !== self_authorization
          ) {
            $("#other_msg_list").append(
              '<div class="card bg-' +
                msg[6] +
                "-subtle border border-" +
                msg[6] +
                '" name="' +
                msg[5] +
                '"><div class="card-header bg-' +
                msg[6] +
                " border border-" +
                msg[6] +
                ' text-white" style="font-weight: bold" name="header">TO: ' +
                msg[4] +
                '</div><div class="card-body text-' +
                msg[6] +
                '-emphasis"><blockquote class="blockquote mb-0"><p>' +
                msg[2] +
                '</p><footer class="blockquote-footer"><cite title="Source Title">FROM: ' +
                msg[3] +
                "</cite></footer></blockquote></div></div>"
            );
          }
        } else {
          if (msg == true) {
            $("#NG_pop2").text("");
            $("#modal_recommend").modal("show");
          } else if (msg == false) {
            $("#NG_pop").text("");
            $("#msg_pop").val("");
            $("#address_pop").val("");
            $("#modal_prohibit").modal("show");
          }
        }
      });

      $("#resend_msg").click(function () {
        var msg = $("#msg_pop").val();
        var address = $("#address_pop").val();
        var edit = $("#number_pop").val();
        if (msg == "") {
          $("#msg_pop").val("");
          $("#address_pop").val("");
          $("#NG_pop").text("送信に失敗しました。");
          $("#number_pop").val("");
        } else {
          if (address == "") {
            $("#msg_pop").val("");
            $("#address_pop").val("");
            $("#NG_pop").text("送信に失敗しました。");
            $("#number_pop").val("");
          } else {
            if (edit == 0) {
              socket.emit("msg_submit", [address, msg, true]);
              $("#msg_pop").val("");
              $("#address_pop").val("");
              $("#modal_recommend").modal("hide");
              $("#number_pop").val("");
            } else if (edit == 1) {
              socket.emit("edit_msg", [msg, address, true]);
              $("#msg_pop").val("");
              $("#address_pop").val("");
              $("#modal_recommend").modal("hide");
              $("#number_pop").val("");
            }
          }
        }
      });

      $(document).on("click", "button[name='edit']", function () {
        $(this).parent().parent().parent().find("p[name='msg']").hide();
        $(this).parent().parent().parent().find("input").attr("type", "text");
        var edit_control = $(this)
          .parent()
          .parent()
          .parent()
          .find("input")
          .attr("name");
        $(this).parent().hide();
        $(this).parent().parent().find("button[name='complete']").show();
        $(this)
          .parent()
          .parent()
          .parent()
          .parent()
          .parent()
          .find("li[name='" + edit_control + "']")
          .attr(
            "class",
            "list-group-item bg-success-subtle border border-success"
          );
        $(this)
          .parent()
          .parent()
          .parent()
          .parent()
          .find("p")
          .attr("class", "text-success-emphasis");
      });

      $(document).on("click", "button[name='complete']", function () {
        var msg = $(this).parent().parent().parent().find("input").val();
        var control = $(this)
          .parent()
          .parent()
          .parent()
          .find("input")
          .attr("name");
        if (!(control == "")) {
          if (!(msg == "")) {
            $("#NG_pop").text(
              "あなたの入力した言葉 '" +
                msg +
                "' は下品で猥褻です。送信しないことを推奨します。"
            );
            $("#NG_pop2").text(
              "あなたの入力した言葉 '" +
                msg +
                "' は極度に下品で猥褻なものです。送信できません。"
            );
            $("#msg_pop").val(msg);
            $("#address_pop").val(control);
            $("#number_pop").val(1);
            socket.emit("edit_msg", [msg, control]);
          }
        }
      });

      $(document).on("click", "button[name='delete']", function () {
        var control = $(this)
          .parent()
          .parent()
          .parent()
          .parent()
          .find("input")
          .attr("name");
        socket.emit("delete_msg", control);
      });

      socket.on("receive_editmsg", function (msg) {
        if (msg.length == 5) {
          if (msg[1] == self_authorization) {
            if ($("#your_msg_list").find("li[name='" + msg[3] + "']") !== 0) {
              $("#your_msg_list")
                .find("li[name='" + msg[3] + "']")
                .each(function () {
                  $(this).removeClass("bg-success-subtle border-success");
                  $(this).addClass("bg-" + msg[4] + "-subtle border-" + msg[4]);
                  $(this).find("p").removeClass("text-success-emphasis");
                  $(this)
                    .find("p")
                    .addClass("text-" + msg[4] + "-emphasis");
                  $(this).find("p[name='msg']").text(msg[2]);
                  $(this).find("p[name='msg']").show();
                  $(this).find("input").attr("type", "hidden");
                  $(this).find("div").show();
                  $(this).find("button[name='complete']").hide();
                });
            }
          } else if (
            msg[0] !== self_authorization &&
            msg[1] !== self_authorization
          ) {
            if ($("#other_msg_list").find("div[name='" + msg[3] + "']") !== 0) {
              var header = $("#other_msg_list")
                .find("div[name='" + msg[3] + "']")
                .find("div[name='header']")
                .text();
              var footer = $("#other_msg_list")
                .find("div[name='" + msg[3] + "']")
                .find("cite")
                .text();
              $("#other_msg_list")
                .find("div[name='" + msg[3] + "']")
                .remove();
              $("#other_msg_list").append(
                '<div class="card bg-' +
                  msg[4] +
                  "-subtle border border-" +
                  msg[4] +
                  '" name="' +
                  msg[3] +
                  '"><div class="card-header bg-' +
                  msg[4] +
                  " border border-" +
                  msg[4] +
                  ' text-white" style="font-weight: bold"><div class="row pb-0"><div class="col-2"><p class="mb-0"><span class="badge bg-success">編集</span></p></div><div class="col-10" name="header">' +
                  header +
                  '</div></div></div><div class="card-body text-' +
                  msg[4] +
                  '-emphasis"><blockquote class="blockquote mb-0"><p>' +
                  msg[2] +
                  '</p><footer class="blockquote-footer"><cite title="Source Title">' +
                  footer +
                  "</cite></footer></blockquote></div></div>"
              );
            }
          }
        } else {
          if (msg == true) {
            $("#NG_pop2").text("");
            $("#modal_recommend").modal("show");
          } else if (msg == false) {
            $("#NG_pop").text("");
            $("#msg_pop").val("");
            $("#address_pop").val("");
            $("#modal_prohibit").modal("show");
          }
        }
      });

      socket.on("receive_deletemsg", function (msg) {
        if (msg.length == 3) {
          if (msg[1] == self_authorization) {
            if ($("#your_msg_list").find("li[name='" + msg[2] + "']") !== 0) {
              $("#your_msg_list")
                .find("li[name='" + msg[2] + "']")
                .remove();
            }
          } else if (
            msg[0] !== self_authorization &&
            msg[1] !== self_authorization
          ) {
            if ($("#other_msg_list").find("div[name='" + msg[2] + "']") !== 0) {
              $("#other_msg_list")
                .find("div[name='" + msg[2] + "']")
                .remove();
              $("#other_msg_list").append(
                '<div class="card border border-danger bg-danger-subtle"><div class="card-header pb-0 text-white bg-danger border border-danger" style="font-weight: bold"><p>削除</p></div><div class="card-body"><blockquote class="blockquote mb-0 text-danger-emphasis"><p>このレッテルは削除されました。</p></blockquote></div></div>'
              );
            }
          }
        }
      });

      socket.on("finish", function () {
        window.location.reload();
      });

      socket.on("error", function () {
        window.location.href = "/internal_error";
      });
    </script>
  </body>
</html>
